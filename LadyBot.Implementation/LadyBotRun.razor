@using LadyBot.Program
@namespace LadyBot.Implementation
@inject LadyBotProgram Program

<svg viewBox="-0.1 -0.1 @(this.Width).1 @(this.Height).1" style="width: auto; height: auto; max-width: 100%; max-height: 80vh">
    @for (int y = 0; y < this.Height; y++)
    {
        @for (int x = 0; x < this.Width; x++)
        {
            <rect x="@x" y="@y" width="1" height="1" style="stroke: black; stroke-width: 1px; opacity: 1; fill: none" vector-effect="non-scaling-stroke" />
        }
    }

    <LadyBotCharacter Playground="@this" @ref="this.aLadyBot" />
</svg>

<button @onclick="this.RunProgramAsync">Run</button>

@code
{
    [Parameter]
    public int Width { get; set; }
    [Parameter]
    public int Height { get; set; }

    private LadyBotCharacter aLadyBot;

    public async Task RunProgramAsync()
    {
        this.aLadyBot.Reset();
        foreach (var command in this.Program)
        {
            switch (command)
            {
                case LadyBotCommand.MoveForward:
                    await this.aLadyBot.MoveForward();
                    break;
                case LadyBotCommand.RotateLeft:
                    await this.aLadyBot.RotateLeft();
                    break;
                case LadyBotCommand.RotateRight:
                    await this.aLadyBot.RotateRight();
                    break;
                case LadyBotCommand.MoveLeft:
                    await this.aLadyBot.Rotate(Rotation.Left);
                    await this.aLadyBot.MoveForward();
                    break;
                case LadyBotCommand.MoveRight:
                    await this.aLadyBot.Rotate(Rotation.Right);
                    await this.aLadyBot.MoveForward();
                    break;
                case LadyBotCommand.MoveUp:
                    await this.aLadyBot.Rotate(Rotation.Up);
                    await this.aLadyBot.MoveForward();
                    break;
                case LadyBotCommand.MoveDown:
                    await this.aLadyBot.Rotate(Rotation.Down);
                    await this.aLadyBot.MoveForward();
                    break;
                default:
                    throw new ArgumentOutOfRangeException();
            }
        }
    }
}
